local repo = "https://raw.githubusercontent.com/deividcomsono/Obsidian/main/"
local Library = loadstring(game:HttpGet(repo .. "Library.lua"))()

local Options = Library.Options
local Toggles = Library.Toggles

Library.ForceCheckbox = false
Library.ShowToggleFrameInKeybinds = true

local Window = Library:CreateWindow({
    Title = "Made by MasterZ",
    Footer = "v1.0.0",
    Icon = 0,
    NotifySide = "Right",
    ShowCustomCursor = true,
})

local Tabs = {
    Main = Window:AddTab("Main", "user"),
}

-- GroupBox1: Main Options1
local GroupBox1 = Tabs.Main:AddLeftGroupbox("Main Options1")

GroupBox1:AddToggle("ExampleToggle1", {
    Text = "Contoh Toggle",
    Default = false,
    Tooltip = "Ini toggle kosong yang bisa kamu isi nanti.",
    Callback = function(Value)
        print(Value and "Contoh Toggle aktif" or "Contoh Toggle nonaktif")
    end,
})

GroupBox1:AddInput("Textbox1", {
    Default = "",
    Numeric = false,
    Finished = false,
    Text = "Nama Client",
    Tooltip = "Masukkan nama client",
    Placeholder = "Ketik sesuatu...",
    Callback = function(Value)
        print("Nama Client:", Value)
    end,
})

-- GroupBox2: Main Options2
local GroupBox2 = Tabs.Main:AddRightGroupbox("Main Options2")

GroupBox2:AddToggle("ExampleToggle2", {
    Text = "Contoh Toggle",
    Default = false,
    Tooltip = "Ini toggle kosong yang bisa kamu isi nanti.",
    Callback = function(Value)
        print(Value and "Contoh Toggle aktif" or "Contoh Toggle nonaktif")
    end,
})

GroupBox2:AddInput("DistanceTextbox", {
    Default = "",
    Numeric = true,
    Finished = false,
    Text = "Jarak Bot",
    Tooltip = "Masukkan jarak antara bot dan player",
    Placeholder = "Contoh: 10",
    Callback = function(Value)
        print("Jarak Bot:", Value)
    end,
})

GroupBox2:AddInput("Textbox2", {
    Default = "",
    Numeric = false,
    Finished = false,
    Text = "Nama Bot",
    Tooltip = "Masukkan nama bot",
    Placeholder = "Ketik sesuatu juga...",
    Callback = function(Value)
        print("Nama Bot:", Value)
    end,
})

-- Keybind toggle menu (opsional)
Library.ToggleKeybind = Options.MenuKeybind
