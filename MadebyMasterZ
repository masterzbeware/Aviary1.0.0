local repo = "https://raw.githubusercontent.com/deividcomsono/Obsidian/main/"
local Library = loadstring(game:HttpGet(repo .. "Library.lua"))()
local ThemeManager = loadstring(game:HttpGet(repo .. "addons/ThemeManager.lua"))()
local SaveManager = loadstring(game:HttpGet(repo .. "addons/SaveManager.lua"))()

local Options = Library.Options
local Toggles = Library.Toggles

Library.ForceCheckbox = false
Library.ShowToggleFrameInKeybinds = true

local Window = Library:CreateWindow({
    Title = "Made by MasterZ",
    Footer = "v1.0.0",
    Icon = 0,
    NotifySide = "Right",
    ShowCustomCursor = true,
})

local Tabs = {
    Main = Window:AddTab("Main", "user"),
}

-- GroupBox 1: kiri
local GroupBox1 = Tabs.Main:AddLeftGroupbox("Main Options1")

-- GroupBox 2: kanan
local GroupBox2 = Tabs.Main:AddRightGroupbox("Main Options2")

-- ======= Main Options1 =======
GroupBox1:AddToggle("ExampleToggle1", {
    Text = "Contoh Toggle",
    Default = false,
    Tooltip = "Ini toggle kosong yang bisa kamu isi nanti.",
    Callback = function(Value)
        print(Value and "Contoh Toggle (1) aktif" or "Contoh Toggle (1) nonaktif")
    end,
})

GroupBox1:AddInput("TextBox1", {
    Default = "",
    Numeric = false,
    Finished = false,
    Text = "Textbox 1",
    Tooltip = "Masukkan teks untuk keperluan pertama",
    Placeholder = "Ketik sesuatu...",
    Callback = function(Value)
        print("Isi TextBox 1:", Value)
    end,
})

-- ======= Main Options2 =======
GroupBox2:AddInput("TextBox2", {
    Default = "",
    Numeric = false,
    Finished = false,
    Text = "Textbox 2",
    Tooltip = "Masukkan teks untuk keperluan kedua",
    Placeholder = "Ketik sesuatu juga...",
    Callback = function(Value)
        print("Isi TextBox 2:", Value)
    end,
})

GroupBox2:AddToggle("ExampleToggle2", {
    Text = "Contoh Toggle",
    Default = false,
    Tooltip = "Ini toggle kosong yang bisa kamu isi nanti.",
    Callback = function(Value)
        print(Value and "Contoh Toggle (2) aktif" or "Contoh Toggle (2) nonaktif")
    end,
})

-- Theme & Save
Library.ToggleKeybind = Options.MenuKeybind
ThemeManager:SetLibrary(Library)
SaveManager:SetLibrary(Library)

SaveManager:IgnoreThemeSettings()
SaveManager:SetIgnoreIndexes({ "MenuKeybind" })

ThemeManager:SetFolder("MyScriptHub")
SaveManager:SetFolder("MyScriptHub/specific-game")
SaveManager:SetSubFolder("specific-place")
