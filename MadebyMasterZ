-- Script LocalScript / Script di bot Roblox LDPlayer
-- Diletakkan di dalam StarterPlayerScripts atau tempat lain tergantung struktur LDPlayer-mu

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local clientName = "akunoctora" -- Ganti dengan nama pemain asli (Client)
local client = nil
local isFollowing = false
local distanceGap = 5

-- Fungsi follow
local function followClient()
	while isFollowing and client and client.Character and client.Character:FindFirstChild("HumanoidRootPart") do
		local bot = Players.LocalPlayer.Character
		if bot and bot:FindFirstChild("Humanoid") and bot:FindFirstChild("HumanoidRootPart") then
			local botHRP = bot.HumanoidRootPart
			local targetPos = client.Character.HumanoidRootPart.Position
			local currentPos = botHRP.Position
			local distance = (targetPos - currentPos).Magnitude

			if distance > distanceGap then
				bot:FindFirstChild("Humanoid"):MoveTo(targetPos - (targetPos - currentPos).Unit * distanceGap)
			else
				bot:FindFirstChild("Humanoid"):MoveTo(currentPos) -- diam
			end
		end
		task.wait(0.25)
	end
end

-- Pantau chat
Players.PlayerAdded:Connect(function(plr)
	if plr.Name == clientName then
		client = plr
		client.Chatted:Connect(function(msg)
			if msg == "!ikuti" then
				isFollowing = true
				task.spawn(followClient)
			elseif msg == "!berhenti" then
				isFollowing = false
			end
		end)
	end
end)

-- Jika client sudah ada saat script jalan
for _, plr in ipairs(Players:GetPlayers()) do
	if plr.Name == clientName then
		client = plr
		client.Chatted:Connect(function(msg)
			if msg == "!ikuti" then
				isFollowing = true
				task.spawn(followClient)
			elseif msg == "!berhenti" then
				isFollowing = false
			end
		end)
	end
end
